@import '~common/stylus/base'
@import '~common/stylus/mixin'
.section-payment
  position relative
  overflow hidden
  font-size 14px
  border-bottom 1px solid #F5F6F8
  padding-top 60px
  
  .payment-order-summary
    width 100%
    height auto
    background-color #fff
    position absolute
    top 0
    left 0
    z-index 999
    padding 0 20px
    box-sizing border-box
    box-shadow 0 0 20px #ccc

    .payment-order-summary-header
      width 100%
      height 60px
      display flex
      flex-direction row
      align-items center
      justify-content flex-start

      .icon-gouwuche
        font-size 26px
        color #5D8CE8
      
      .title
        font-size 16px
        font-weight bold
        color $color-text-s
        margin-left 20px
      
      .icon-xiala
        font-size 12px
        color $color-text-l
        margin-left 20px
        transform rotate(180deg)
  
      .total-money
        position absolute
        right 20px
        font-size 18px
        font-family Helvetica-Bold
        font-weight bold
        color $color-text-s

    .payment-order-summary-detail
      .detail-main
        display flex
        flex-direction row
        align-items center
        justify-content flex-start
        border-top 1px solid #F5F6F8
        border-bottom 1px solid #F5F6F8
        padding 30px 0 20px 0

        .order-img
          width 60px
          height 60px
          background-color #F6F6F6
          border 1px solid #979797
          border-radius 6px
          box-sizing border-box
          position relative

          span.num
            display block
            width 20px
            height 20px
            border-radius 10px
            background-color $color-text-l
            font-size 14px
            color $color-text
            line-height 20px
            text-align center
            position absolute
            top -8px
            right -8px
        
        .order-detail
          margin-left 20px

          p
            &:first-child
              font-size 14px
              font-weight bold
              color $color-text-s
              lin-height 20px

            &:nth-child(2)
              font-size 12px
              color $color-text-l
              lin-height 17px
              margin-top 5px
        
        .order-money
          position absolute
          right 20px
          
          p
            &:first-child
              font-size 14px
              font-family 'Helvetica-Bold'
              font-weight bold
              line-height 17px
              color $color-text-s
      
      .detail-shipping
        display flex
        flex-direction row
        justify-content space-between
        padding 10px 0 20px 0
        
        span
          &:first-child
            font-size 14px
            font-weight bold
            font-family 'PingFangSC-Medium'
            font-weight 500
            color $color-text-s
          
          &:nth-child(2)
            font-size 14px
            font-family 'Helvetica-Bold'
            font-weight bold
            line-height 17px
            color $color-text-s

  .payment-order-summary.open
    .icon-xiala
      transform rotate(0deg)

  .payment-tips1
    font-size 20px
    font-family "Helvetica-Bold"
    font-weight bold
    color $color-text-s
    line-height 24px
    text-align center
    margin 30px auto 0 auto

  .paypal-btn
    margin 0 auto
    width 300px
    height 50px
    background url(../../common/image/paypal-btn.png) no-repeat center center
    background-size contain
    margin 20px auto 0 auto
    border-radius 25px
    box-shadow 0 10px 20px rgba(251, 187, 94, .7)

  .payment-address
    padding 0 20px 25px 20px

    .payment-tips2
      font-family 'Helvetica-Light'
      font-size 14px
      color $color-text-l
      text-align center
      position relative
      margin 30px auto 0 auto

      span
        font-family 'Helvetica'

      &:before
        content ""
        width 50px
        height 1px
        border 0
        border-top 1px solid #DCDCDC
        position absolute
        top 50%
        left 0
        transform translateY(-50%)

      &:after
        content ""
        width 50px
        height 1px
        border 0
        border-top 1px solid #DCDCDC
        position absolute
        top 50%
        right 0
        transform translateY(-50%)
    
    .payment-address-form
      margin 30px auto 0 auto

    .payment-tips3
      font-size 12px
      font-family 'Helvetica-Light'
      color $color-text-l
      line-height 16px
      margin 10px 36px 0 36px
      text-align center
  
  .payment-shipping
    padding 25px 20px 20px 20px

    .payment-tips4
      font-size 12px
      font-family 'Helvetica-Light'
      color $color-text-l
      line-height 16px
      margin 10px auto 0 auto
      text-align center

  .payment-method
    padding 20px 20px 70px 20px

    .payment-method-links
      display flex
      flex-direction row
      align-items center
      justify-content flex-start

      span
        width 68px
        height 34px
        margin 10px 10px 0 0

        img
          max-width 100%
    
    .form-section.card
      margin-top 20px

    .form-section.cvc
      .cvc-info-btn
        font-size 16px
        color $color-text-l
        position absolute
        top 50%
        right 15px
        transform translateY(-50%)

      .cvc-info
        display block
        width 200px
        padding 8px
        font-size 12px
        color $color-text
        background-color $color-text-l
        position absolute
        right 0
        bottom 55px
        line-height 1.3
        border-radius 4px
        transition 0.2s

        &:after
          content ""
          width 0
          height 0
          border 6px solid transparent
          border-top 6px solid $color-text-l
          position absolute
          right 18px
          bottom -11px